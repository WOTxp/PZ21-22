@{
    Layout = "_Layout";
    ViewData["Title"] = "Tasks";
}
<style>
body{
    background-color: #EEEEEE;
}

.one-category{
    margin:auto;
    width: 100%;
    text-align: justify;
}

.category{
    margin: auto;
    margin-top: 30px;
    background-color: #FFFFFF;
    width: 100%;
    padding-top: 10px;
    padding-bottom: 5px;
    padding-left: 20px;
    padding-right: 20px;
}

.title-and-description{
    margin:auto;
    width: 100%;
    float: none;
    padding: 10px;
    padding-left: 20px;
    padding-right: 20px;
}

.title{
    margin:auto;
    width: 100%;
}

.description{
    margin:auto;
    width: 100%;
}
</style>

<div id="data" class="w-100 h-25">
    <h1>Testy</h1>
    <button class="btn" id="load">Zaladuj</button>
    <div id="tasks" class="row"></div>
</div>

<script type="text/javascript" defer>
    $("#load").on("click", function () {
    $.ajax({
        type: "GET",
        url: '@Url.Action("LoadMoreTasks", "Tasks", new { batchSize=2 })',
        success: function (response) {
            alert(response)
            document.getElementById("tasks").innerHTML+=response;
        }
    });
});
</script>