@model Mathio.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
}

<style>
body{
    background-color: #EEEEEE;
}

.content{
    margin: auto;
    background-color: #FFFFFF;
    padding-left: 30px;
    padding-right: 30px;
    padding-top: 10px;
    padding-bottom: 20px;
    widht: 100%;
    text-align: center;
}

.field-extra{
    margin-top: 20px;
    border-radius: 25px;
    border: 1px solid #BBB;
    width: 100%;
    text-align: center;
}

.button-extra{
    width: 100%;
    margin-top: 20px;
    border-radius: 25px;
    background-color: #088AFC;
    color: #FFFFFF;
    border: 2px #0872FC solid;
    transition-duration: 0.5s;
    transition-timing-function: linear;
    padding-top: 5px;
    padding-bottom: 5px;
}

.button-extra:hover{
    background-color: #0872FC;
    color: #FFFFFF;
    border: 2px #086AFC solid;
    text-shadow: 0 0 0.5px #EEEEEE;
    transition-duration: 0.5s;
    transition-timing-function: linear;
}

.hide{
    display: none;
}

.title{
    background-color: #088AFC;
    padding: 14px;
    color: #FFFFFF;
    text-align: center;
    width: 100%;
    font-size: 20px;
    transition-duration: 0.5s;
    transition-timing-function: linear;
}

.cursor-pointer{
    cursor: pointer;
}

.catcher{
    width: 100%;
    min-width: 375px;
}

.extra:hover{
    background-color: #3082F4;
    color: #EEEEEE;
    transition-duration: 0.5s;
    transition-timing-function: linear;
}

.a:link{
    text-decoration: none;
    color: #FFFFFF;
    transition-duration: 0.5s;
    transition-timing-function: linear;
}

.a:link:hover{
    text-decoration: none;
    color: #EEEEEE;
    transition-duration: 0.5s;
    transition-timing-function: linear;
}

a:link{
    text-decoration: none;
}

.margin-top-10{
    margin-top: 10px;
}

.margin-top-20{
    margin-top: 20px;
}
</style>


<div class="row">

    <div class="col-0 col-sm-2 col-md-3 col-xl-4"></div>

    <div class="col-12 col-sm-8 col-md-6 col-xl-4">
        <div class="title margin-top-20">Zmiana hasła</div>
        <div class="content">
            <form asp-action="ChangePassword">
                <div class="form-group text-center field-group-extra">
                    <label asp-for="OldPassword" class="control-label hide">Wpisz aktualne hasło</label>
                    <input asp-for="OldPassword" class="form-control field-extra" type="password" placeholder="Hasło" />
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
                <div class="form-group text-center field-group-extra">
                    <label asp-for="NewPassword" class="control-label hide">Wpisz nowe hasło</label>
                    <input asp-for="NewPassword" class="form-control field-extra" type="password" placeholder="Nowe hasło" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary button-extra" value="Zmień"/>
            </form>
        </div>
        <a href="/Profile" class="link"><div class="title extra cursor-pointer">Ucieczka</div></a>
    </div>
    
    <div class="col-0 col-sm-2 col-md-3 col-xl-4"></div>

</div>